<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.rummytitans.playcashrummyonline.cardgame.R" />

        <variable
            name="viewModel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.mobileverification.MobileVerificationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mobileverification.MobileVerificationActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/margin_large" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/margin_large" />


                <TextView
                    android:id="@+id/txtMobileVerification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@{viewModel.txtTitle}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MyTeam11.Large"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMobileVerificationDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_micro"
                    android:gravity="center_horizontal"
                    android:text="@{viewModel.txtDescription}"
                    android:textAppearance="@style/TextAppearance.MyTeam11.Small"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toBottomOf="@+id/txtMobileVerification" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editMobileNumber"
                    style="@style/Widget.MyTeam11.BorderEditText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="@dimen/margin_small"
                    android:enabled="@{viewModel.enableSendOTP}"
                    android:hint="@string/hint_enter_mobile_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:visibility="@{viewModel.MShowChangePassword?View.GONE:View.VISIBLE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toBottomOf="@+id/txtMobileVerificationDetail"
                    app:setCompactDrawableLeft="@{R.drawable.ic_mobile}" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editSetPassword"
                    style="@style/Widget.MyTeam11.BorderEditText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="8dp"
                    android:digits="@string/str_password_digits"
                    android:hint="@string/txt_create_new_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE:View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toBottomOf="@+id/editMobileNumber"
                    app:setCompactDrawableLeft="@{R.drawable.ic_password}" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editConfirmSetPassword"
                    style="@style/Widget.MyTeam11.BorderEditText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="8dp"
                    android:digits="@string/str_password_digits"
                    android:hint="@string/frag_change_password_confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE:View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toBottomOf="@+id/editSetPassword"
                    app:setCompactDrawableLeft="@{R.drawable.ic_password}" />


                <ImageView
                    android:id="@+id/checkPsdAlpha"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="8dp"
                    android:visibility="@{viewModel.isPsdAlphabateDone()?View.VISIBLE:View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPasswordPolicy"
                    app:layout_constraintStart_toStartOf="@+id/editConfirmSetPassword"
                    app:layout_constraintTop_toTopOf="@+id/txtPasswordPolicy"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_check_correct" />

                <ImageView
                    android:id="@+id/checkPsdDigit"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="@{viewModel.isPsdDigitDone()?View.VISIBLE:View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPsdDigit"
                    app:layout_constraintStart_toStartOf="@+id/checkPsdAlpha"
                    app:layout_constraintTop_toTopOf="@+id/txtPsdDigit"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_check_correct" />

                <ImageView
                    android:id="@+id/checkSpecialSymbol"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="@{viewModel.isPsdSpecialDone()?View.VISIBLE:View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPsdSpecialSymbol2"
                    app:layout_constraintStart_toStartOf="@+id/checkPsdAlpha"
                    app:layout_constraintTop_toTopOf="@+id/txtPsdSpecialSymbol2"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_check_correct" />

                <ImageView
                    android:id="@+id/checkPsdLenght"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="@{viewModel.isPsdLengthDone()?View.VISIBLE:View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPsdSpecialSymbol"
                    app:layout_constraintStart_toStartOf="@+id/checkPsdAlpha"
                    app:layout_constraintTop_toTopOf="@+id/txtPsdSpecialSymbol"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_check_correct" />

                <TextView
                    android:id="@+id/txtPasswordPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Password must contain 1 alphabet."
                    android:textSize="10sp"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE :View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toEndOf="@+id/checkPsdAlpha"
                    app:layout_constraintTop_toBottomOf="@+id/editConfirmSetPassword" />

                <TextView
                    android:id="@+id/txtPsdDigit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Password must contain 1 digit(0-9)."
                    android:textSize="10sp"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE :View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toEndOf="@+id/checkPsdDigit"
                    app:layout_constraintTop_toBottomOf="@+id/txtPasswordPolicy" />

                <TextView
                    android:id="@+id/txtPsdSpecialSymbol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Password must contain minimum 8 characters."
                    android:textSize="10sp"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE :View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/checkPsdLenght"
                    app:layout_constraintTop_toBottomOf="@+id/txtPsdDigit" />


                <TextView
                    android:id="@+id/txtPsdSpecialSymbol2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/password_validation_text"
                    android:textSize="10sp"
                    android:visibility="@{viewModel.MShowChangePassword?View.VISIBLE :View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toEndOf="@+id/checkSpecialSymbol"
                    app:layout_constraintTop_toBottomOf="@+id/txtPsdSpecialSymbol" />

                <TextView
                    android:id="@+id/btnSendOTP"
                    style="@style/Widget.MyTeam11.RaisedButton"
                    android:layout_marginTop="8dp"
                    android:enabled="@{viewModel.enableSendOTP}"
                    android:onClick="@{()-> viewModel.sendOTP()}"
                    android:text="@{viewModel.txtSendOTP}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPsdSpecialSymbol2" />


                <LinearLayout
                    android:id="@+id/layoutOTP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.MShowEnterOtpView? View.VISIBLE:View.GONE}"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toBottomOf="@+id/btnSendOTP"
                    tools:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/txt_we_ve_sent_a_verification_code_to_mobile_number_enter_the_code_below_to_verify_it_s_you"
                        android:textAppearance="@style/TextAppearance.MyTeam11.Small" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/txt_enter_otp"
                        android:textAppearance="@style/TextAppearance.MyTeam11.Medium" />

                    <com.chaos.view.PinView
                        android:id="@+id/otpView"
                        style="@style/PinWidget.PinView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:cursorVisible="true"
                        android:hint="&#45;&#45;&#45;&#45;&#45;&#45;"
                        android:inputType="number"
                        android:textColor="@color/gunmetal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cursorWidth="2dp"
                        app:itemCount="6"
                        app:itemHeight="@dimen/edittext_height"
                        app:itemRadius="4dp"
                        app:itemSpacing="2dp"
                        app:itemWidth="@dimen/edittext_height"
                        app:lineColor="#e2e4e5"
                        app:lineWidth="0.8dp"
                        app:viewType="rectangle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnVerifyOTP"
                        style="@style/Widget.MyTeam11.RaisedButton"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_min"
                        android:onClick="@{()-> viewModel.verifyOtp()}"
                        android:text="@string/txt_verify" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loadingLogin"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_white_progress"
                    android:elevation="10dp"
                    android:padding="@dimen/margin_min"
                    android:theme="@style/ProgressBar"
                    android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@+id/layoutOTP"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.rummytitans.playcashrummyonline.cardgame.widget.FadingSnackbar
            android:id="@+id/fadingSnackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:elevation="@dimen/margin_micro"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnSignIn"
            style="@style/Widget.MyTeam11.ParentBottomButton"
            android:onClick="@{()->viewModel.goBack()}"
            android:text="@{viewModel.txtSignInButton}"
            android:textAppearance="@style/TextAppearance.MyTeam11.Small"
            android:visibility="@{viewModel.btnSignInVisibility?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>