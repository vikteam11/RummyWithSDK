<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.Color" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewmodel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.appupdate.AppUpdateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/img_onboarding_bg">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="@+id/txtHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtHeader"
            app:srcCompat="@drawable/ic_newback" />
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:text="New Update"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_gravity="fill"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabMaxWidth="7dp"
            android:visibility="visible"
            app:tabIndicatorHeight="0dp"
            app:tabBackground="@drawable/tab_selector"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtUpdateLater"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/update_later"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="@{viewmodel.versionResp.ForceUpdate?View.GONE:View.VISIBLE}"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateApp" />

        <TextView
            android:id="@+id/btnUpdateApp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/update_now"
            android:textAllCaps="true"
            android:textColor="@color/blackColor"
            android:textSize="12sp"
            android:background="@drawable/bg_primary_box"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtVersion"
            app:layout_constraintStart_toEndOf="@id/txtUpdateLater"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/customProgressBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="9dp"
            android:visibility="gone"
            android:progress="50"
            android:progressDrawable="@drawable/bg_progress"
            app:layout_constraintBottom_toTopOf="@id/txtDownloadingStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtDownloadingStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color8"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/txtVersion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:textSize="12sp"
            android:textColor="@color/grey4"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>