<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.rummytitans.playcashrummyonline.cardgame.R"/>
        <import type="android.view.View"/>
        <import type="android.graphics.Color"/>
        <variable
            name="viewModel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.newlogin.NewLoginViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/linParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/refer_code"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="15dp"
                android:background="#4000"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />

            <TextView
                android:id="@+id/txtMessage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center"
                android:visibility="gone"
                android:text="Your friend get â‚¹50 when you successfully register"
                android:textColor="@color/cool_grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/inputLayout1"
                app:layout_constraintStart_toStartOf="@+id/inputLayout1"
                app:layout_constraintTop_toBottomOf="@+id/view" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:textColorHint="@color/gray2"
                app:TextInputTintColor="@{@color/gray2}"
                android:theme="@style/Widget.MyTeam11.TextInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMessage1">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText"
                    style="@style/Widget.MyTeam11.BorderEditTextV2"
                    android:backgroundTint="@color/edtTintColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:hint="@string/refer_code"
                    android:digits="@string/refercode_digits"
                    android:paddingBottom="20dp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/gray1"
                    android:textColorHint="@color/gray2"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/txtNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/text_color2"
                android:textSize="12sp"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtYes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/inputLayout1"
                app:layout_constraintTop_toBottomOf="@+id/inputLayout1" />


            <Button
                android:id="@+id/txtYes"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_primary_box"
                android:backgroundTint="@{viewModel.validForRefercode?@color/secondary : @color/cool_grey}"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/save_code"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/txtNo"
                app:layout_constraintEnd_toEndOf="@+id/inputLayout1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtNo"
                app:layout_constraintTop_toTopOf="@+id/txtNo" />
            <View
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:elevation="4dp"
                android:background="@color/secondary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/txtNo"
                app:layout_constraintEnd_toEndOf="@+id/inputLayout1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtNo"
                app:layout_constraintTop_toTopOf="@+id/txtNo" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>