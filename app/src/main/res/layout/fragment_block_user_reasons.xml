<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="blockUser"
            type="com.rummytitans.playcashrummyonline.cardgame.models.BlockUserModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:textSize="18sp"
        android:textColor="@color/text_color8"
        android:gravity="center_horizontal"
        android:text="@{blockUser.Header}"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvHeaderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/text_color2"
        android:gravity="center_horizontal"
        android:text="@{blockUser.HeaderDetail}"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRequest"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivBlockedIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:setSrcCompact="@{@drawable/ic_img_blocked_vector}"
                android:src="@drawable/ic_img_blocked_vector"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:textSize="14sp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/text_color8"
                android:gravity="center_horizontal"
                android:text="@{blockUser.Title}"
                android:layout_marginTop="12dp"
                tools:text="Title Text here"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivBlockedIcon"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                app:layout_constraintBottom_toTopOf="@+id/txtSupport">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="30dp"
                        tools:itemCount="3"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_block_user_reason"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>

                    <TextView
                        android:id="@+id/txtHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_medium"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="66dp"
                        android:textColor="@color/maingreen"
                        app:setUnderline="@{true}"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:text="Know More"
                        tools:visibility="visible"
                        android:visibility="@{TextUtils.isEmpty(blockUser.HelpUrl)? View.GONE :View.VISIBLE,default=gone}"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/txtSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/text_color2"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:text="@{blockUser.SupportText}"
                tools:text="sdhshds dsh ds hd dsdsndsdsd dsh hd shdg sgd sd s dgs dsdfs d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnRequest"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_squre_8dp"
        android:backgroundTint="@color/maingreen"
        android:elevation="3dp"
        android:fontFamily="@font/rubik_medium"
        android:text="Raise a Request"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>