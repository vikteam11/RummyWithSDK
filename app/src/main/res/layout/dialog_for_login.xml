<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linParent"
        android:layout_width="340dp"
        app:cardCornerRadius="3dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_box">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/app_name"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/textView29" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View android:layout_width="match_parent"
              android:layout_height="0.3dp" android:background="#4000"
              android:layout_marginTop="15dp" android:id="@+id/view"
              app:layout_constraintTop_toBottomOf="@+id/textView29"/>

        <TextView
                android:id="@+id/txtMessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/cool_grey"
                android:textSize="12dp"
                android:text="Ready to Win with your Teams?"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>

        <TextView
                android:id="@+id/txtMessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark"
                android:text="Login/Signup with MyTeam11: India's Most Trusted Fantasy Platform &amp; enjoy a Wide Range of Fantasy Sports!"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txtMessage1" android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>


        <View android:layout_width="match_parent" android:layout_height="45dp"
              android:background="@color/colorPrimary"
              app:layout_constraintTop_toBottomOf="@+id/txtMessage2"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="10dp" android:id="@+id/view22"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/txtNo"
                app:layout_constraintTop_toTopOf="@+id/view22" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/view25"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <View android:layout_width="0.3dp" android:layout_height="30dp"
              android:background="@color/white"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintBottom_toBottomOf="@id/view22"
              app:layout_constraintTop_toTopOf="@+id/view22" android:id="@+id/view25"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_sign_up_continue"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:id="@+id/txtYes" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view22" app:layout_constraintStart_toEndOf="@+id/view25"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>